<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/recipe_add_linear"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="450dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal">
            <ImageButton
                android:id="@+id/recipe_add_recipe_button"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/dingdan"
                android:background="@drawable/add_recipe_trends_button"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="新建菜谱"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal">
            <ImageButton
                android:id="@+id/recipe_add_trends_button"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/bianji"
                android:background="@drawable/add_recipe_trends_button"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="新建动态"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

