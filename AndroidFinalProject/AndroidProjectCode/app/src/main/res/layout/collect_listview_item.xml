<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.example.xiaocaiyidie.RadiuImageView
            android:id="@+id/collect_listview_recipeimage1"
            android:layout_width="110dp"
            android:layout_height="150dp"
            android:src="@drawable/image_2"
            android:scaleType="centerCrop"
            app:radius="10dp"/>
        <TextView
            android:id="@+id/collect_listview_recipename1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="菜谱名称"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.example.xiaocaiyidie.RadiuImageView
            android:id="@+id/collect_listview_recipeimage2"
            android:layout_width="110dp"
            android:layout_height="150dp"
            android:src="@drawable/image_2"
            android:scaleType="centerCrop"
            app:radius="10dp"/>
        <TextView
            android:id="@+id/collect_listview_recipename2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="菜谱名称"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.example.xiaocaiyidie.RadiuImageView
            android:id="@+id/collect_listview_recipeimage3"
            android:layout_width="110dp"
            android:layout_height="150dp"
            android:src="@drawable/image_2"
            android:scaleType="centerCrop"
            app:radius="10dp"/>
        <TextView
            android:id="@+id/collect_listview_recipename3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="菜谱名称"/>
    </LinearLayout>
</LinearLayout>