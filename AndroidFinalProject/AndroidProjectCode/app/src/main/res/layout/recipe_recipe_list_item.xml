<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="horizontal">
    <com.example.xiaocaiyidie.RadiuImageView
        android:id="@+id/recipe_recipe_list_image"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/image_2"
        android:scaleType="centerCrop"
        app:radius="10dp"/>
    <LinearLayout
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/recipe_recipe_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="香酥糯米鸡"
            android:textSize="25sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/recipe_recipe_list_miaoshu"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="描述.........."
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/recipe_recipe_list_time"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2021-12-12"
            android:textSize="16sp"/>
    </LinearLayout>
</LinearLayout>

